{
  "schemaVersion": 2,
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd game-starter && npm run build"
  },
  "deploy": {
    "startCommand": "cd game-starter && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  }
} 